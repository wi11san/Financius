@page
@model Financius.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<body>

    <div class="page page-center d-flex justify-content-center align-items-center">
        <div class="container-tight py-4 px-3">

            <form method="post" class="card card-md shadow-sm">
                <div class="card-body">
                    <div class="card-title text-center">Login</div>
                    <div class="mb-3">
                        <input type="email" class="form-control" autocomplete="off" placeholder="Digite seu E-mail" name="email" asp-for="Usuario.Email" required>
                        <div class="invalid-feedback">
                            Por favor, entre com um endereço de e-mail válido.
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="input-group">
                            <input type="password" class="form-control" id="senha" autocomplete="off" placeholder="Digite sua senha" name="senha" asp-for="Usuario.Senha" required>
                            <span class="input-group-text bg-transparent py-0">
                                <a id="showPassword" class="link-secondary" aria-label="Show password" style="cursor: pointer;">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><circle cx="12" cy="12" r="2"></circle><path d="M22 12c-2.667 4.667 -6 7 -10 7s-7.333 -2.333 -10 -7c2.667 -4.667 6 -7 10 -7s7.333 2.333 10 7"></path></svg>
                                </a>
                            </span>
                        </div>
                        <div class="invalid-feedback">
                            Por favor, entre com sua senha.
                        </div>
                    </div>
                    <div class="text-center text-muted mt-3">
                        <a href="/ForgotPassword">Esqueci minha senha</a>
                    </div>
                    <div class="form-footer text-center">
                        <button type="submit" class="btn btn-primary btn-block">Entrar</button>
                    </div>
                </div>
            </form>
            <div class="text-center text-muted mt-3">
                Não possui uma conta? <a href="/Register">Cadastre-se</a>
            </div>

        </div>
    </div>
</body>

<script type="text/javascript">

    const password = document.getElementById("senha");
    const element = document.getElementById("showPassword");
    element.addEventListener("click", () => {
        if (password.type == "password") {

            password.type = "text";
        } else {
            password.type = "password";
        }
    });
</script>

